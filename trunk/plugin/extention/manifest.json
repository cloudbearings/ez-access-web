{
  "name": "EZ Access Browser",
  "description": "An EZ Access Web Parser",
  "version": "0.0.0.1",
  "manifest_version": 2,
  "icons": { 
    "16":"icon-16.png", 
    "48":"icon-48.png", 
    "128":"icon-128.png" 
  }, 
  "permissions": ["tts"],
  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_icon": {                    // optional
      "19": "icon19.png",           // optional
      "38": "icon38.png"            // optional
    },
    "default_title": "EZ Access"      // optional; shown in tooltip
    //"default_popup": "popup.html"        // optional
  },
  "content_scripts" : [
    {
      "run_at": "document_end",
      "matches" : [
        "http://*/*"
      ],
      "css": ["style.css"],
      "js" : ["enable.js","settings.json","js/ezaccess.js","js/hammer.js","js/tinybox.js"]
    }
  ],
  "web_accessible_resources": [
    "earcons/*"
  ]
}